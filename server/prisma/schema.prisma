// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int        @id @default(autoincrement())
  email       String     @unique
  name        String
  phoneNumber String
  password    String
  role        Role       @default(GUEST)
  createdAt   DateTime   @default(now())
  favorites   Favorite[]
  Space       Space[]
  Booking     Booking[]
}

enum Role {
  ADMIN
  HOST
  GUEST
}

model Space {
  id Int @id @default(autoincrement())

  name        String
  description String?
  latitude    Float
  longitude   Float
  address     String
  images      String[]

  host     User       @relation(fields: [hostId], references: [id])
  hostId   Int
  Room     Room[]
  Favorite Favorite[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Room {
  id Int @id @default(autoincrement())

  name        String
  description String?
  price       Int
  images      String[]

  space    Space     @relation(fields: [spaceId], references: [id])
  spaceId  Int
  bookings Booking[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Booking {
  id String @id @default(uuid())

  startDate DateTime
  endDate   DateTime

  room    Room @relation(fields: [roomId], references: [id])
  roomId  Int
  guest   User @relation(fields: [guestId], references: [id])
  guestId Int

  createdAt DateTime @default(now())
}

model Favorite {
  user    User  @relation(fields: [userId], references: [id])
  userId  Int
  space   Space @relation(fields: [spaceId], references: [id])
  spaceId Int

  @@id([userId, spaceId])
}
